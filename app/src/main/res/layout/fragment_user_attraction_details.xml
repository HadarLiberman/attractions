<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttractionDetailsFragment">

    <TextView
        android:id="@+id/details_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hadar Liberman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/details_image_imv"
        android:layout_width="342dp"
        android:layout_height="248dp"
        android:layout_marginTop="130dp"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:paddingTop="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/south" />

    <TextView
        android:id="@+id/details_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dead Sea"
        android:textColor="#88C5E3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/details_location_btn"
        app:layout_constraintStart_toStartOf="@+id/details_location_btn" />

    <TextView
        android:id="@+id/details_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="The geological wonder of the Dead Sea is one of the must-do tourist attractions in the Middle East."
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/details_image_imv"
        app:layout_constraintStart_toStartOf="@+id/details_image_imv"
        app:layout_constraintTop_toBottomOf="@+id/details_image_imv" />

    <ImageButton
        android:id="@+id/details_edit_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:backgroundTint="#484C8288"
        android:focusable="false"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_btn"
        app:layout_constraintBottom_toBottomOf="@+id/details_delete_btn"
        app:layout_constraintEnd_toStartOf="@+id/details_delete_btn"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/details_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Catrgory:"
        app:layout_constraintStart_toStartOf="@+id/details_desc_tv"
        app:layout_constraintTop_toBottomOf="@+id/details_desc_tv" />

    <TextView
        android:id="@+id/details_subCategory_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sub Category"
        app:layout_constraintStart_toStartOf="@+id/details_category_tv"
        app:layout_constraintTop_toBottomOf="@+id/details_category_tv" />

    <TextView
        android:id="@+id/details_location_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="South"
        app:layout_constraintBottom_toBottomOf="@+id/details_location_btn"
        app:layout_constraintStart_toEndOf="@+id/details_location_btn"
        app:layout_constraintTop_toTopOf="@+id/details_location_btn" />

    <ImageView
        android:id="@+id/details_location_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/details_image_imv"
        app:layout_constraintStart_toStartOf="@+id/details_image_imv"
        app:srcCompat="@drawable/location" />

    <ImageView
        android:id="@+id/details_delete_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/details_image_imv"
        app:layout_constraintEnd_toEndOf="@+id/details_image_imv"
        app:srcCompat="@drawable/delete" />

    <TextView
        android:id="@+id/details_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="12/01/2022"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/details_image_imv"
        app:layout_constraintTop_toBottomOf="@+id/details_image_imv" />

    <ImageView
        android:id="@+id/details_back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>